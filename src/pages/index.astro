---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Makonome - Precision Metronome for iOS">
  <main>
    <header>
      <h1>Makonome</h1>
      <p class="tagline">A precision metronome for serious musicians</p>
    </header>

    <section class="hero">
      <div class="device-frame">
        <div class="device-notch"></div>
        <img
          src="/screenshots/metronome-main.png"
          alt="Makonome metronome app showing BPM dial at 173 Vivace"
          class="screenshot"
        />
      </div>
      
      <div class="cta">
        <a href="#" class="download-btn">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
            <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
          </svg>
          Download on the App Store
        </a>
        <p class="coming-soon">Coming soon</p>
      </div>
    </section>

    <section class="features">
      <h2>Features</h2>
      <div class="feature-grid">
        <div class="feature">
          <h3>üéØ Sample-Accurate Timing</h3>
          <p>Professional-grade precision using AVAudioEngine for rock-solid timing you can trust.</p>
        </div>
        <div class="feature">
          <h3>üéµ Flexible Time Signatures</h3>
          <p>From 1 to 16 beats per bar with quarter, eighth, sixteenth, and triplet subdivisions.</p>
        </div>
        <div class="feature">
          <h3>üîá Gap Trainer</h3>
          <p>Build your internal clock by practicing with periodic silence intervals.</p>
        </div>
        <div class="feature">
          <h3>üìà Tempo Changer</h3>
          <p>Gradually increase tempo over time or bars to push your limits progressively.</p>
        </div>
        <div class="feature">
          <h3>ü•Å Multiple Sounds</h3>
          <p>Choose from click, clave, woodblock, or cowbell with adjustable pitch.</p>
        </div>
        <div class="feature">
          <h3>üìä Practice Tracking</h3>
          <p>Log your sessions and track your progress over time.</p>
        </div>
      </div>
    </section>

    <section class="gallery">
      <h2>See It in Action</h2>
      <div class="carousel">
        <div class="carousel-track">
          <div class="carousel-slide">
            <div class="device-frame-small">
              <div class="device-notch-small"></div>
              <img src="/screenshots/metronome-main.png" alt="Metronome main screen" />
            </div>
            <p class="slide-caption">Precision BPM Control</p>
          </div>
          <div class="carousel-slide">
            <div class="device-frame-small">
              <div class="device-notch-small"></div>
              <img src="/screenshots/screen-2.png" alt="Settings screen" />
            </div>
            <p class="slide-caption">Customizable Settings</p>
          </div>
          <div class="carousel-slide">
            <div class="device-frame-small">
              <div class="device-notch-small"></div>
              <img src="/screenshots/screen-3.png" alt="Practice tab" />
            </div>
            <p class="slide-caption">Practice Tracking</p>
          </div>
          <div class="carousel-slide">
            <div class="device-frame-small">
              <div class="device-notch-small"></div>
              <img src="/screenshots/screen-4.png" alt="Practice history" />
            </div>
            <p class="slide-caption">Session History</p>
          </div>
          <div class="carousel-slide">
            <div class="device-frame-small">
              <div class="device-notch-small"></div>
              <img src="/screenshots/screen-5.png" alt="Tempo Changer" />
            </div>
            <p class="slide-caption">Tempo Changer</p>
          </div>
        </div>
      </div>
    </section>

    <section class="pricing">
      <h2>Simple Pricing</h2>
      <div class="pricing-card">
        <div class="pricing-header">
          <h3>Makonome</h3>
          <p class="pricing-model">One-time purchase</p>
        </div>
        <ul class="pricing-features">
          <li>All features included</li>
          <li>All future upgrades included</li>
          <li>No subscriptions</li>
          <li>No ads, ever</li>
        </ul>
        <div class="trial-badge">
          <span>14-day free trial</span>
        </div>
        <p class="pricing-note">Try everything free for 14 days. Buy once, own forever.</p>
        <p class="refund-note">Not happy? Get a refund through the App Store.</p>
      </div>
    </section>

    <!-- Lightbox modal -->
    <div class="lightbox" id="lightbox">
      <button class="lightbox-close" aria-label="Close">&times;</button>
      <img class="lightbox-img" id="lightbox-img" src="" alt="" />
    </div>

    <footer>
      <p>&copy; 2025 Makonome. Built with ‚ô• for musicians.</p>
      <nav>
        <a href="/manual">Manual</a>
        <a href="/changelog">Changelog</a>
      </nav>
    </footer>
  </main>
</BaseLayout>

<style>
  main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  header {
    text-align: center;
    padding: 4rem 0;
  }

  h1 {
    font-size: 3.5rem;
    font-weight: 700;
    letter-spacing: -0.02em;
    margin-bottom: 0.5rem;
  }

  .tagline {
    font-size: 1.25rem;
    color: var(--color-text-muted);
  }

  .hero {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 3rem;
    padding: 2rem 0 4rem;
  }

  .device-frame {
    position: relative;
    padding: 12px;
    background: #1c1c1e;
    border-radius: 52px;
    box-shadow:
      0 20px 60px rgba(0, 0, 0, 0.5),
      inset 0 0 0 2px #333,
      inset 0 0 0 4px #1c1c1e;
  }

  .device-notch {
    position: absolute;
    top: 20px;
    left: 50%;
    transform: translateX(-50%);
    width: 90px;
    height: 28px;
    background: #000;
    border-radius: 20px;
    z-index: 10;
  }

  .screenshot {
    display: block;
    width: 280px;
    height: auto;
    border-radius: 40px;
  }

  .cta {
    text-align: center;
  }

  .download-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    background: var(--color-text);
    color: var(--color-bg);
    padding: 1rem 2rem;
    border-radius: 12px;
    font-weight: 600;
    font-size: 1.1rem;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .download-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(255, 255, 255, 0.1);
    text-decoration: none;
  }

  .coming-soon {
    margin-top: 1rem;
    color: var(--color-text-muted);
    font-size: 0.9rem;
  }

  .features {
    padding: 4rem 0;
  }

  .features h2 {
    text-align: center;
    font-size: 2rem;
    margin-bottom: 3rem;
  }

  .feature-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .feature {
    background: var(--color-surface);
    padding: 2rem;
    border-radius: 16px;
    border: 1px solid #333;
  }

  .feature h3 {
    font-size: 1.25rem;
    margin-bottom: 0.75rem;
  }

  .feature p {
    color: var(--color-text-muted);
    line-height: 1.6;
  }

  .pricing {
    padding: 4rem 0;
    text-align: center;
  }

  .pricing h2 {
    font-size: 2rem;
    margin-bottom: 3rem;
  }

  .pricing-card {
    max-width: 400px;
    margin: 0 auto;
    background: var(--color-surface);
    border-radius: 24px;
    border: 2px solid var(--color-accent-dim);
    padding: 2.5rem;
  }

  .pricing-header h3 {
    font-size: 1.75rem;
    margin-bottom: 0.25rem;
  }

  .pricing-model {
    color: var(--color-accent);
    font-weight: 600;
    font-size: 1.1rem;
  }

  .pricing-features {
    list-style: none;
    padding: 0;
    margin: 2rem 0;
    text-align: left;
  }

  .pricing-features li {
    padding: 0.6rem 0;
    padding-left: 2rem;
    position: relative;
    color: var(--color-text-muted);
  }

  .pricing-features li::before {
    content: "‚úì";
    position: absolute;
    left: 0;
    color: var(--color-accent);
    font-weight: bold;
  }

  .trial-badge {
    background: var(--color-accent);
    color: var(--color-bg);
    padding: 0.75rem 1.5rem;
    border-radius: 50px;
    display: inline-block;
    font-weight: 700;
    font-size: 1.1rem;
    margin-bottom: 1rem;
  }

  .pricing-note {
    color: var(--color-text-muted);
    font-size: 0.95rem;
  }

  .refund-note {
    color: var(--color-text-muted);
    font-size: 0.75rem;
    margin-top: 0.75rem;
    opacity: 0.7;
  }

  .gallery {
    padding: 4rem 0;
  }

  .gallery h2 {
    text-align: center;
    font-size: 2rem;
    margin-bottom: 3rem;
  }

  .carousel {
    width: 100%;
    overflow-x: auto;
    overflow-y: hidden;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
    padding: 1rem 0 1.5rem;
  }

  .carousel::-webkit-scrollbar {
    height: 6px;
  }

  .carousel::-webkit-scrollbar-track {
    background: var(--color-surface);
    border-radius: 3px;
    margin: 0 30%;
  }

  .carousel::-webkit-scrollbar-thumb {
    background: var(--color-accent-dim);
    border-radius: 3px;
  }

  .carousel::-webkit-scrollbar-thumb:hover {
    background: var(--color-accent);
  }

  .carousel-track {
    display: inline-flex;
    gap: 1.5rem;
    padding: 0 calc(50% - 100px);
  }

  .carousel-slide {
    flex: 0 0 auto;
    scroll-snap-align: center;
    text-align: center;
  }

  .device-frame-small {
    position: relative;
    padding: 8px;
    background: #1c1c1e;
    border-radius: 36px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.4);
  }

  .device-notch-small {
    position: absolute;
    top: 14px;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 20px;
    background: #000;
    border-radius: 14px;
    z-index: 10;
  }

  .device-frame-small img {
    display: block;
    width: 180px;
    height: auto;
    border-radius: 28px;
  }

  .slide-caption {
    margin-top: 1rem;
    color: var(--color-text-muted);
    font-size: 0.9rem;
  }

  .device-frame-small {
    cursor: pointer;
    transition: transform 0.2s;
  }

  .device-frame-small:hover {
    transform: scale(1.02);
  }

  .lightbox {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.95);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s, visibility 0.3s;
    z-index: 1000;
    cursor: pointer;
  }

  .lightbox.active {
    opacity: 1;
    visibility: visible;
  }

  .lightbox-close {
    position: absolute;
    top: 1.5rem;
    right: 1.5rem;
    background: none;
    border: none;
    color: white;
    font-size: 2.5rem;
    cursor: pointer;
    opacity: 0.7;
    transition: opacity 0.2s;
    line-height: 1;
  }

  .lightbox-close:hover {
    opacity: 1;
  }

  .lightbox-img {
    max-height: 90vh;
    max-width: 90vw;
    border-radius: 40px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
    cursor: default;
  }

  footer {
    border-top: 1px solid #333;
    padding: 3rem 0;
    text-align: center;
    color: var(--color-text-muted);
  }

  footer nav {
    margin-top: 1rem;
    display: flex;
    justify-content: center;
    gap: 2rem;
  }

  @media (max-width: 640px) {
    h1 {
      font-size: 2.5rem;
    }

    .device-frame {
      padding: 10px;
      border-radius: 44px;
    }

    .device-notch {
      width: 70px;
      height: 22px;
      top: 16px;
    }

    .screenshot {
      width: 220px;
      border-radius: 34px;
    }

    .device-frame-small img {
      width: 150px;
    }

    .device-frame-small {
      padding: 6px;
      border-radius: 30px;
    }

    .device-notch-small {
      width: 50px;
      height: 16px;
      top: 12px;
    }
  }
</style>

<script>
  const lightbox = document.getElementById('lightbox');
  const lightboxImg = document.getElementById('lightbox-img') as HTMLImageElement;
  const lightboxClose = document.querySelector('.lightbox-close');
  const carouselImages = document.querySelectorAll('.device-frame-small img');

  // Open lightbox when clicking carousel images
  carouselImages.forEach((img) => {
    img.parentElement?.addEventListener('click', () => {
      if (img instanceof HTMLImageElement) {
        lightboxImg.src = img.src;
        lightboxImg.alt = img.alt;
        lightbox?.classList.add('active');
      }
    });
  });

  // Close lightbox when clicking the close button
  lightboxClose?.addEventListener('click', (e) => {
    e.stopPropagation();
    lightbox?.classList.remove('active');
  });

  // Close lightbox when clicking the background
  lightbox?.addEventListener('click', (e) => {
    if (e.target === lightbox) {
      lightbox.classList.remove('active');
    }
  });

  // Close lightbox on Escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      lightbox?.classList.remove('active');
    }
  });
</script>
